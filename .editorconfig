root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.lua]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Auto-generated by lazy.nvim â€” do not normalize
[lazy-lock.json]
trim_trailing_whitespace = false
